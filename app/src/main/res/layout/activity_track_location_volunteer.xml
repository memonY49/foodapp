<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Volunteer.TrackLocationVolunteer">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progress_bar_track_location"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:SpinKit_Color="#990606"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/toolbar_track_locations"
            android:id="@+id/toolbar_track" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview_track_orders_volunteer"
            android:layout_marginTop="15dp"

            />

    </LinearLayout>

</RelativeLayout>